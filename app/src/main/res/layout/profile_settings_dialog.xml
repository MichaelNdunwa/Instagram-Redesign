<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_dialog_background">

    <ImageView
        android:id="@+id/remove_iv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:foregroundGravity="top|center_vertical"
        android:src="@drawable/remove_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/settings_button"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="Settings and privacy"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/settings_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/remove_iv" />


    <TextView
        android:id="@+id/activity_button"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="Your activity"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/activity_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_button" />

    <TextView
        android:id="@+id/archive_button"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="Archive"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/archive_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_button" />

    <TextView
        android:id="@+id/qr_scanner_button"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="QR Code"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/qr_code_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/archive_button" />

    <TextView
        android:id="@+id/bookmark_button"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="Bookmark"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/bookmark_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/qr_scanner_button" />

    <TextView
        android:id="@+id/supervision_button"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="Supervision"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/supervision"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bookmark_button" />

    <TextView
        android:id="@+id/payments_button"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="Orders and payments"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/payment_card_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/supervision_button" />

    <TextView
        android:id="@+id/verification_button"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="Meta Verified"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/verified_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/payments_button" />

    <TextView
        android:id="@+id/close_friends_button"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="Close Friends"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/close_friend_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/verification_button" />

    <TextView
        android:id="@+id/favorite_button"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="10dp"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="Favorite"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/favorite_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/close_friends_button" />


</androidx.constraintlayout.widget.ConstraintLayout>