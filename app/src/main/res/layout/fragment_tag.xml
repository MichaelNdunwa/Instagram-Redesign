<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.main_user_profile.TagFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/tag_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user_tag_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/message1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Photos and vidoes of you"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/tag_icon"
            app:layout_constraintStart_toStartOf="@id/tag_icon"
            app:layout_constraintTop_toBottomOf="@id/tag_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="When people tag you in photos and videos, they'll appear here."
            android:textSize="12sp"
            android:layout_marginTop="12sp"
            app:layout_constraintStart_toStartOf="@id/message1"
            app:layout_constraintEnd_toEndOf="@id/message1"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/message1" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>